@{
}
<h1 class="mt-5"></h1>
<div class="p-2">
    <form asp-action="ContactMe" asp-controller="BlogPosts" method="post" class="row">
        
        <div class="row row-cols-1 row-cols-md-2 g-3 mb-3">
            <div class="col col-md-12">
                <label>Your Email</label>
                <label>@Model.EmailAddress</label>
                <input asp-for="EmailAddress" type="hidden" />
            </div>
        </div>
        <div class="row row-cols-1 g-3">
            <div class="col">
                <label>Subject</label>
                <input type="text" class="form-control" asp-for="Subject" />
            </div>
            <div class="col">
                <label for="contact-message">Your Message</label>
                <textarea asp-for="Message"></textarea>
            </div>
            <div class="col text-end">
                <button class="btn btn-primary rounded-pill btnlinks" type="submit">Submit</button>
            </div>
        </div>
    </form>
</div>